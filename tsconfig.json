{
  "compilerOptions": {
    "module": "esnext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts", "test/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}